Q.9 create 2 servlets. In first servlet create an object of employee class which sets the attribute value for employee object .In second servlet retrieve the values
    of employee object and display all information about an employee.
 Ans:
 Servlet 01:---
    package Assignment;
import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class Ass_09ser1 extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    public Ass_09ser1() {
        super();
        // TODO Auto-generated constructor stub
    }

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		PrintWriter out=response.getWriter();
		response.setContentType("text/html");
		String ename=request.getParameter("En"); 
		int eid=(Integer.parseInt(request.getParameter("Eid")));
		
		Connection cn;
		Statement smt;
		
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			
			cn=DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","system","root");
			
			smt=cn.createStatement();
			
			Employee c=new Employee();     // Create object of Model class
			
			c.setEname(ename);  // Setting data to Model class 
			c.setEid(eid);
			
			String query="insert into Employee_info_Ass09 values('"+c.getEname()+"','"+c.getEid()+"')";  
			
			smt.executeUpdate(query); 
			
			out.print("<h4>Record submitted successfully...</h4>");
			smt.close();
			cn.commit();
			cn.close();
			
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}
}
   Servlet 02:---
   package Assignment;
import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;


import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class Ass_09ser2 extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    public Ass_09ser2() {
        super();
        // TODO Auto-generated constructor stub
    }

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		PrintWriter out=response.getWriter();
		response.setContentType("text/html");
		Connection cn;
		PreparedStatement psmt;
		
		try {
              Class.forName("oracle.jdbc.driver.OracleDriver");
			
			cn=DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","system","root");
			
			psmt=cn.prepareStatement("select * from Employee_info_Ass09");
			
			ResultSet rs=psmt.executeQuery();
			
			out.print("<center>");
			out.print("<table border=4>");
			out.print("<caption></u><b><font size=3 color='red'>Empolyee Details</font></b></u></caption>");
			out.print("<tr><th>Employee Name</th><th>Employee Id</th></tr>");
			while(rs.next())
			{
				out.print("<tr><td>"+rs.getString(1)+"</td><td>"+rs.getString(2)+"</td></tr>");   
				
			}
			out.print("</table>");
			out.print("</center>");
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}
}
