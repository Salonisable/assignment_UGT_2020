Q.5 Create 2 servlets and one web.xml file in which name is set as a parameter for first servlet and city is set as a parameter for second servlet. First servlet prints
    the length of the name and second servlet prints the city name in Capital case.
 Ans:
        -------------------------------------------
	Ass_5_Serlet1:
	package org.demo;
	
	import java.io.IOException;
	import java.io.PrintWriter;
	
	import javax.servlet.ServletConfig;
	import javax.servlet.ServletException;
	import javax.servlet.http.HttpServlet;
	import javax.servlet.http.HttpServletRequest;
	import javax.servlet.http.HttpServletResponse;
	
	public class Ass_5ser1 extends HttpServlet {
	private static final long serialVersionUID = 1L;
	
	public Ass_5ser1() {
	super();
	// TODO Auto-generated constructor stub
	}
	
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	PrintWriter out=response.getWriter();
	
	ServletConfig sc=getServletConfig(); 
	
	String name=sc.getInitParameter("Name");
	out.print("Length of is Name : "+name.length());
	}
	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	// TODO Auto-generated method stub
	doGet(request, response);
	}
	
	}
	
	-------------------------------------------
	Ass_5_Serlet2:
	
	package org.demo;
	
	import java.io.IOException;
	import java.io.PrintWriter;
	
	import javax.servlet.ServletConfig;
	import javax.servlet.ServletException;
	import javax.servlet.http.HttpServlet;
	import javax.servlet.http.HttpServletRequest;
	import javax.servlet.http.HttpServletResponse;
	
	public class Ass_5ser2 extends HttpServlet {
	private static final long serialVersionUID = 1L;
	
	public Ass_5ser2() {
	super();
	// TODO Auto-generated constructor stub
	}
	
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	PrintWriter out=response.getWriter();
	
	ServletConfig sc=getServletConfig(); // SERVLET CONFIG
	
	String City=sc.getInitParameter("City");
	out.print("City Name in Upper case : "+City.toUpperCase());
	}
	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	// TODO Auto-generated method stub
	doGet(request, response);
	}
	
	}
	-------------------------
	web.xml:
	
	<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>J2EE_Assignment</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>Form.html</welcome-file>
  </welcome-file-list>
	
	<servlet>
	<description></description>
	<display-name>Servlet1</display-name>
	<servlet-name>Ass_5ser1</servlet-name>
	<servlet-class>org.demo.Ass_5ser1</servlet-class>
	<init-param>
	<param-name>Name</param-name>
	<param-value>Rohan</param-value>
	</init-param>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>Ass_5ser1</servlet-name>
	<url-pattern>/Servlet1</url-pattern>
	</servlet-mapping>
	<servlet>
	<description></description>
	<display-name>Servlet2</display-name>
	<servlet-name>Ass_5ser2</servlet-name>
	<servlet-class>org.demo.Ass_5ser2</servlet-class>
	<init-param>
	<param-name>City</param-name>
	<param-value>Pune</param-value>
	</init-param>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>Ass_5ser2</servlet-name>
	<url-pattern>/Servlet2</url-pattern>
	</servlet-mapping>
	</web-app>
	
